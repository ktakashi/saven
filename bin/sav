#!/bin/sh
#| -*- mode: scheme; coding: utf-8; -*-
exec sagittarius $0 "$@"
|#
(import (rnrs)
	(saven)
	(getopt))

(define (usage)
  (print "sav [OPTIONS] targets ...")
  (print "OPTIONS:")
  (print " -f sav file (e.g. sav.scm, sav.yaml), default sav.scm")
  (exit 1))

(define (execute sav-file targets)
  (define descriptor (saven:build-file->module-descriptor sav-file))
  (define sorted-modules (saven:analyse-descriptor descriptor))
  (define lifecycle (saven:lifecycle sorted-modules))
  (lifecycle targets))

(define (main args)
  (with-args (cdr args)
      ((file (#\f "file") #t "sav.yaml")
       . rest)
    (unless (file-exists? file)
      (print file " doesn't exist")
      (usage))
    (execute file rest)))
